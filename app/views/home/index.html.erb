<div id="main-carousel" class="carousel side">
  <!-- carousel indicator -->
  <ol class="carousel-indicators">
    <% for banner_index  in 0..@banner_images.length - 1%>
      <% if banner_index == 0 %>
        <li data-target="#main-carousel" data-slide-to="<%= banner_index %>" class="active"></li>
      <% else %>
        <li data-target="#main-carousel" data-slide-to="<%= banner_index %>"></li>
      <% end %>
    <% end %>
  </ol>

  <!-- Carousel items -->
  <div class="carousel-inner">
    <%= render partial: 'banner_item', collection: @banner_images %>
  </div><!-- carousel-inner -->

</div>

