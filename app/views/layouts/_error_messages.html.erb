<!--
  expected parameters:
    - model - active model
    - model_name - optional, default => model.class.model_name
 -->
<% if model.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize model.errors.count, "error" %>
      prohibited this <%= model.class.model_name %> from being saved:
    </h2>
    <p>There were problems with the following fields: </p>
    <ul>
      <% model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>